networks:
  frontend:
  backend:

services:
  # --- AUTOMATED REVERSE PROXY ---
  nginx-proxy:
    image: nginxproxy/nginx-proxy:latest
    container_name: nginx-proxy
    labels:
      - com.github.nginx-proxy.nginx=true
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock:ro
      - certs:/etc/nginx/certs:ro
      - vhost:/etc/nginx/vhost.d
      - html:/usr/share/nginx/html
    networks:
      - frontend
      - backend
    restart: always

  # --- SSL AUTOMATION (Desactivado para .local, pero listo para futuro) ---
  acme-companion:
    image: nginxproxy/acme-companion:latest
    container_name: nginx-proxy-acme
    environment:
      - DEFAULT_EMAIL=tu-email@ejemplo.com
      - NGINX_PROXY_CONTAINER=nginx-proxy
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - certs:/etc/nginx/certs
      - vhost:/etc/nginx/vhost.d
      - html:/usr/share/nginx/html
    depends_on:
      - nginx-proxy
    networks:
      - frontend
    restart: always

  # --- MANAGEMENT ---
  portainer:
    image: portainer/portainer-ce:latest
    container_name: portainer
    command: -H unix:///var/run/docker.sock
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - portainer_data:/data
    environment:
      - VIRTUAL_HOST=portainer.miservidor.local
      - VIRTUAL_PORT=9000
      # Eliminamos LETSENCRYPT_HOST porque no funciona con .local
    networks:
      - frontend
    restart: unless-stopped

  # --- MONITORING ---
  prometheus:
    image: prom/prometheus:latest
    container_name: prometheus
    volumes:
      - ./prometheus/prometheus.yml:/etc/prometheus/prometheus.yml
      - prometheus_data:/prometheus
    environment:
      - VIRTUAL_HOST=prometheus.miservidor.local
      - VIRTUAL_PORT=9090
    networks:
      - frontend
      - backend
    restart: unless-stopped

  grafana:
    image: grafana/grafana:latest
    container_name: grafana
    volumes:
      - grafana_data:/var/lib/grafana
    environment:
      - VIRTUAL_HOST=grafana.miservidor.local
      - VIRTUAL_PORT=3000
    networks:
      - frontend
      - backend
    restart: unless-stopped

volumes:
  portainer_data:
  grafana_data:
  prometheus_data:
  certs:
  vhost:
  html:
